{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
  },
  "include": [
    "./src/**/*",
    "./public/**/*.jpg"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.tsx"
  ]
}